        </div>
        <div class="row">
            <div class="col-md-12">
                <div class=" job-tab">
                    <ul class="nav nav-pills job-tab-switch" id="pills-tab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="pills-companies-tab" data-bs-toggle="pill" href="#pills-companies" role="tab" aria-controls="pills-companies" aria-selected="true">top Companies</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="pills-job-tab" data-bs-toggle="pill" href="#pills-job" role="tab" aria-controls="pills-job" aria-selected="false">job openning</a>
                        </li>
                    </ul>
                </div>
                <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane fade show active" id="pills-companies" role="tabpanel" aria-labelledby="pills-companies-tab">
                        <div class="top-company-tab">
                            <ul>
                                @{
                                    foreach (var C in Model.CompanyInfoList)
                                    {
                                        
                                        string imgpath = "/Front/no-image.png";
                                        if (!string.IsNullOrEmpty(C.LogoPath))
                                        {
                                            imgpath = "/Upload/" + C.LogoPath;
                                        }
                                        <li>
                                            <div class="top-company-list">
                                                <div class="company-list-logo">
                                                    <a href="#">
                                                        <img src="@imgpath" alt="company" />
                                                    </a>
                                                </div>
                                                <div class="company-list-details">
                                                    <h3><a asp-action="ViewProfile" asp-controller="Employer" asp-route-Slugname="@C.SlugName">@C.Company</a></h3>
                                                    <p class="company-state"><i class="fa fa-map-marker"></i> @C.Address</p>
                                                    <p class="open-icon"><i class="fa fa-briefcase"></i>@C.JobAgainst open position</p>
                                                    <p class="varify"><i class="fa fa-check"></i>Verified</p>
                                                    @*<p class="rating-company">4.9</p>*@
                                                </div>
                                                <div class="company-list-btn">
                                                    <a asp-action="ViewProfile" asp-controller="Employer" asp-route-Slugname="@C.SlugName" class="jobguru-btn">view profile</a>
                                                </div>
                                            </div>
                                        </li>
                                    }
                                }
                            </ul>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="pills-job" role="tabpanel" aria-labelledby="pills-job-tab">
                        <div class="top-company-tab">
                            <ul>
                                @{
                                    foreach (var item in Model.JobList)
                                    {
                                        string imgpath = "/Front/no-image.png";
                                        if (!string.IsNullOrEmpty(item.logoPath))
                                        {
                                            imgpath = "/Upload/" + item.logoPath;
                                        }
                                        <li>
                                            <div class="top-company-list">
                                                <div class="company-list-logo">
                                                    <a asp-action="JobDetail" asp-controller="JobPost" asp-route-SlugName="@item.SlugName">
                                                        <img src="@imgpath" alt="Logo" />
                                                    </a>
                                                </div>
                                                <div class="company-list-details">
                                                    <h3><a asp-action="JobDetail" asp-controller="JobPost" asp-route-SlugName="@item.SlugName">@item.Title</a></h3>
                                                    <p class="company-state"><i class="fa fa-map-marker"></i>
                                                    @{ 
                                                        if (item.SpecificAddress)
                                                        {
                                                            <span>@item.City , @item.Province</span>
                                                        }
                                                        else 
                                                        {
                                                            <span>@item.AddressToAdvertise</span>
                                                        }
                                                    }
                                                    </p>
                                                    <p class="open-icon">
                                                        <i class="fa fa-clock-o"></i>
                                                        @{
                                                            if (item.DayPassed > 0)
                                                            {
                                                                <span>@item.DayPassed days ago</span>
                                                            }
                                                            else if (item.HourPassed > 0)
                                                            {
                                                                <span>@item.HourPassed hours ago</span>
                                                            }
                                                            else if (item.MinPassed > 0)
                                                            {
                                                                <span>@item.MinPassed minutes ago</span>
                                                            }
                                                            else
                                                            {
                                                                <span>Posted Now</span>
                                                            }
                                                        }
                                                    </p>
                                                    <p class="varify">
                                                        <i class="fa fa-check"></i>
                                                        @{
                                                            switch (item.ShowBy)
                                                            {
                                                                case "Range":
                                                                    <span>Minimum $@item.MinPay.ToString("#,#00") To Maximum $@item.MaxPay.ToString("#,#00") @item.Rate</span>
                                                                    break;
                                                                case "Starting Amount":
                                                                    <span>Starting From $@item.Amount.ToString("#,#00") @item.Rate</span>
                                                                    break;
                                                                case "Maximun Amount":
                                                                    <span>Maximun $@item.Amount.ToString("#,#00") @item.Rate</span>
                                                                    break;
                                                                case "Excat Amount":
                                                                    <span>Fixed Price $@item.Amount.ToString("#,#00") @item.Rate</span>
                                                                    break;
                                                                default:
                                                                    break;
                                                            }
                                                        }
                                                    </p>
                                                </div>
                                                <div class="company-list-btn">
                                                    <a href="#" class="jobguru-btn">Apply Now</a>
                                                </div>
                                            </div>
                                        </li>
                                    }
                                }

