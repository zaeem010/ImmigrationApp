 @model List<CompanyInfo>
@{
    ViewData["Title"] = "Jobs by companies";
}
<!-- Header Area Start -->
<partial name="_headerwhite" />
<!-- Header Area End -->
<!-- Breadcromb Area Start -->
      <section class="jobguru-breadcromb-area">
         <div class="breadcromb-bottom">
            <div class="container">
               <div class="row">
                  <div class="col-md-12">
                     <div class="breadcromb-box-pagin">
                        <ul>
                           <li><a href="#">home</a></li>
                           <li><a href="#">employer</a></li>
                           <li class="active-breadcromb"><a href="#">browse companies</a></li>
                        </ul>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </section>
      <!-- Breadcromb Area End -->
    <!-- Top Job Area Start -->
      <section class="jobguru-top-job-area browse-page section_70">
         <div class="container">
            <div class="row">
               <div class="col-lg-12 col-md-11 mx-auto">
                  <div class="job-grid-right">
                     <div class="browse-job-head-option">
                        <div class="job-browse-search">
                           <form>
                              <input type="search" placeholder="Search companies Here...">
                              <button type="submit"><i class="fa fa-search"></i></button>
                           </form>
                        </div>
                        
                     </div>
                     <div class="row">
                        @foreach (var item in Model)
                        {
                            string imgpath = "/Front/no-image.png";
                            if (!string.IsNullOrEmpty(item.LogoPath))
                            {
                                imgpath = "/Upload/" + item.LogoPath;
                            }
                            <div class="col-lg-6 col-md-6">
                                <div class="sigle-top-job">
                                    <div class="top-job-company-image">
                                        <div class="company-logo-img">
                                            <a href="#">
                                                <img src="@imgpath" style="height:70px;width:170px" alt="company image" />
                                            </a>
                                        </div>
                                        <h3><a href="#">@item.Company</a></h3>
                                    </div>
                                    <div class="top-job-company-desc">
                                        <ul>
                                            <li>Location <span class="company-state"><i class="fa fa-map-marker"></i> @item.City</span></li>
                                            <li>jobs <span class="varify"><i class="fa fa-check"></i>(@item.JobAgainst)</span></li>
                                        </ul>
                                        <div class="top-job-company-btn">
                                            <a asp-action="ViewProfile" asp-controller="Employer" asp-route-Slugname="@item.SlugName" asp-route-CallBy="@item.CallBy" class="jobguru-btn">view profile</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                     </div>
                     <!-- end row -->
                     @*<div class="row">
                        <div class="col-md-12">
                           <div class="pagination-box-row">
                              <p>Page 1 of 6</p>
                              <ul class="pagination">
                                 <li class="active"><a href="#">1</a></li>
                                 <li><a href="#">2</a></li>
                                 <li><a href="#">3</a></li>
                                 <li>...</li>
                                 <li><a href="#">6</a></li>
                                 <li><a href="#"><i class="fa fa-angle-double-right"></i></a></li>
                              </ul>
                           </div>
                        </div>
                     </div>*@
                     <!-- end pagination row -->
                  </div>
               </div>
            </div>
         </div>
      </section>
      <!-- Top Job Area End -->