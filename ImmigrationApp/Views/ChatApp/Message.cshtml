@model ChatHubVM
@{
    ViewData["Title"] = "Message";
}
<!-- Header Area Start -->
<partial name="_headerwhite" />
<!-- Header Area End -->
<!-- Breadcromb Area Start -->

<section class="jobguru-breadcromb-area">
    <div class="breadcromb-bottom">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="breadcromb-box-pagin">
                        <ul>
                            <li><a href="#">home</a></li>
                            <li class="active-breadcromb"><a href="#">Messages</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcromb Area End -->
<!-- Candidate Dashboard Area Start -->
<section class="candidate-dashboard-area section_70">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-8  mx-auto">
                <div class="dashboard-right message-page-box">
                    <div class="manage-jobs-heading">
                        <h3>New Messages</h3>
                    </div>
                    <div class="row">
                        <div class="col-lg-4 col-md-12 ">
                            <div class="chat-list-left">
                                <div class="chat-search-form">
                                    <form>
                                        <input type="search" placeholder="Search Contact">
                                        <button type="submit"><i class="fa fa-search"></i></button>
                                    </form>
                                </div>
                                <!-- End Chat Search -->
                                <div class="chat-list-body">
                                    <ul class="chat-list">
                                        @{
                                            foreach (var item in Model.peopleHub)
                                            {
                                                <li class="clearfix">
                                                    <a asp-route-Id="@item.Id" asp-action="Chat" asp-controller="ChatApp">
                                                        <div class="chat-about">
                                                            <h4><b>@item.ConnectedName</b> <span class="badge bg-dark">0</span></h4>
                                                            <small class="online">Online</small>
                                                        </div>
                                                    </a>
                                                </li>
                                            }
                                        }
                                    </ul>
                                </div>
                                <!-- End Chat List Body -->
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Candidate Dashboard Area End -->

