@model Job
@{
    ViewData["Title"] = "JobPost";
}
<style>
    .select2-container--default .select2-selection--single .select2-selection__rendered {
        text-transform: capitalize !important;
        border: 2px solid #e8ecec;
        color: #777 !important
    }
</style>
<!-- Header Area Start -->
<partial name="_headerwhite" />
<!-- Header Area End -->
<!-- Breadcromb Area Start -->
<section class="jobguru-breadcromb-area">
    <div class="breadcromb-bottom">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="breadcromb-box-pagin">
                        <ul>
                            <li><a href="#">home</a></li>
                            <li><a href="#">employer</a></li>
                            <li class="active-breadcromb"><a href="#">Post a Job</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcromb Area End -->
<!-- Candidate Dashboard Area Start -->
<section class="candidate-dashboard-area section_70">
    <div class="container">
        <div class="row">
            <!--Sidebar For Employer-->
            <div class="col-md-4 col-lg-3 dashboard-left-border">
                <div class="dashboard-left">
                    <ul class="dashboard-menu">
                        <li><a asp-action="Dashboard"><i class="fa fa-tachometer"></i>Dashboard</a></li>
                        <li><a asp-action="Profile"><i class="fa fa-users"></i>Company Profile</a></li>
                        <li><a asp-action="Messages"><i class="fa fa-envelope-open"></i>messages</a></li>
                        <li><a class="active" asp-action="JobPost"><i class="fa fa-envelope-open"></i>post a job</a></li>
                        <li><a asp-action="Manage"><i class="fa fa-briefcase"></i>manage candidates</a></li>
                        <li><a href="#"><i class="fa fa-rocket"></i>transaction</a></li>
                        <li><a asp-action="Password"><i class="fa fa-lock"></i>change password</a></li>
                        <li><a asp-action="Logout" asp-controller="Account"><i class="fa fa-power-off"></i>LogOut</a></li>
                    </ul>
                </div>
            </div>
            <!--Sidebar For Employer End-->
            <div class="col-md-8 col-lg-9">
                <div class="dashboard-right">
                    <form asp-action="#" enctype="multipart/form-data">
                        <div class="candidate-profile">
                            <div class="candidate-single-profile-info">
                                <div class="resume-box">
                                    <h3>company profile</h3>
                                    <div class="single-resume-feild feild-flex-2">
                                        <div class="single-input">
                                            <label for="name">Job Title:</label>
                                            <input type="text">
                                            <span  class="text-danger"></span>
                                        </div>
                                        <div class="single-input">
                                            <label for="c_cat">category:</label>
                                            <select >
                                                <option value="">Choose Category</option>
                                                <option value="IT Service">IT Service</option>
                                                <option value="StartUP">StartUP</option>
                                                <option value="Corporate">Corporate</option>
                                            </select>
                                            <span class="text-danger"></span>
                                        </div>
                                    </div>
                               
                                    <div class="single-resume-feild ">
                                        <div class="single-input">
                                            <label for="Bio">Description:</label>
                                            <textarea ></textarea>
                                        </div>
                                    </div>
                                </div>

                                <div class="resume-box">
                                    <h3>social link</h3>
                                    
                                </div>
                                <div class="submit-resume">
                                    <button type="submit">Update</button>
                                </div>

                            </div>
                        </div>
                        <input type="hidden" />
                     
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Candidate Dashboard Area End -->