@model IList<ApplyforJob>
@{
    ViewData["Title"] = "Manage-Job-Request";
}
<!-- Header Area Start -->
<partial name="_headerwhite" />
<!-- Header Area End -->
<!-- Breadcromb Area Start -->
<section class="jobguru-breadcromb-area">
    <div class="breadcromb-bottom">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="breadcromb-box-pagin">
                        <ul>
                            <li><a href="#">home</a></li>
                            <li><a href="#">employer</a></li>
                            <li class="active-breadcromb"><a href="#">Manage Job Request</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcromb Area End -->
<!-- Candidate Dashboard Area Start -->
<section class="candidate-dashboard-area section_70">
    <div class="container">
        <div class="row">

            <div class="col-md-12 col-lg-12 mx-auto">
                <div class="dashboard-right ">
                    <div class="manage-jobs">
                        <div class="manage-jobs-heading">
                            <h3>Job Request</h3>
                        </div>
                        <div class="single-manage-jobs table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Canidate Name</th>
                                        <th>Applied On</th>
                                        <th>Job Name</th>
                                        <th>Status</th>
                                        <th>action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td class="manage-jobs-title">
                                                    @if (item.AppliedUsing == "Web Profile")
                                                    {
                                                        <a target="_blank" asp-action="ProfileView" asp-controller="Candidate" asp-route-slugname="@item.mycustomresume.SlugName">@item.mycustomresume.FirstName @item.mycustomresume.LastName</a>
                                                    }
                                                    else if (item.AppliedUsing == "Resume")
                                                    {
                                                        <a target="_blank" href="~/Upload/@item.mycustomresume.ResumeUrlPath">@item.mycustomresume.FirstName @item.mycustomresume.LastName</a>
                                                    }

                                                </td>
                                                <td>@item.AppliedDate.ToString("dd  MMM,yyyy hh:mm tt")</td>
                                                <td><a target="_blank" asp-action="JobDetail" asp-controller="JobPost" asp-route-SlugName="@item.myJob.SlugName">@item.myJob.Title</a></td>
                                                <td><span class="pending">@item.Status</span></td>
                                                <td>
                                                    <div class="candidate-action">
                                                        <a href="#" class="jobguru-btn-2 text-white">Approve</a>
                                                        <a href="#" class="jobguru-btn-danger text-white">Cancel</a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }

                                </tbody>
                            </table>
                            @*<div class="pagination-box-row">
                                    <p>Page 1 of 6</p>
                                    <ul class="pagination">
                                        <li class="active"><a href="#">1</a></li>
                                        <li><a href="#">2</a></li>
                                        <li><a href="#">3</a></li>
                                        <li>...</li>
                                        <li><a href="#">6</a></li>
                                        <li><a href="#"><i class="fa fa-angle-double-right"></i></a></li>
                                    </ul>
                                </div>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Candidate Dashboard Area End -->